pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t nginximage .'
            }
        }

        stage('Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-password-id', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                }
            }
        } // This closing bracket was missing

        stage('Deploy') {
            steps {
                        sh 'docker tag nginximage sharmi2504/nginx'
                        sh 'docker push sharmi2504/nginx'
                    } 
                }
            }
        }

    
