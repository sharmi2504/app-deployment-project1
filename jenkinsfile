pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = 'docker-password-id' // Define environment variable for credentials ID
    }

    stages {
        stage('Build') {
            steps {
                script {
                // Build Docker image using build script file
                sh './build.sh'
            }
        }
  }
        stage('Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${env.DOCKER_CREDENTIALS_ID}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    // Log in to Docker using credentials
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                }
            }

        stage('Deploy') {
            steps {
                script {
                    // Deploy only if on the 'dev' branch
                    if (env.BRANCH_NAME == 'dev') {
                        sh './deploy.sh'
                    } else {
                        echo "Not on the dev branch"
                    }
                }
            }
        }
    }
}
    
